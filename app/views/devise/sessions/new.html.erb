<% content_for :title, "Sign in" %>

<div class="pure-g-r">
	<div class="pure-u-19-24">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "pure-form pure-form-aligned" }) do |f| %>
		<fieldset>
			<div class="pure-control-group">
				<%= f.label :email %>
				<%= f.email_field :email, :autofocus => true, :placeholder => "example@domain.com" %>
			</div>    
			<div class="pure-control-group">
				<%= f.label :password %>
				<%= f.password_field :password %>
			</div>

			<div class="pure-controls">
				<% if devise_mapping.rememberable? -%>
					<label for="user[rememberme]" class="pure-checkbox">
					                
					<%= f.check_box :remember_me %> I've read the terms and conditions
					</label>
				<% end -%>
		
				<%= f.submit "Sign in",:class => 'pure-button pure-button-primary'  %>
			</div>

			<%= render "devise/shared/links" %>
		</fieldset>
		</form>
		<% end %>
	</div>
</div>