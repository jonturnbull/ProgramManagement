<%= form_for(resource, :as => resource_name, :html => {:class => "form-signin"}, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<h2 class="form-signin-heading">Sign up</h2>

  <div>
  <%= f.email_field :email, :autofocus => true, :class => "form-control", :placeholder => "Email address" %></div>

  <div>
  <%= f.password_field :password, :class => "form-control", :class => "form-control", :placeholder => "Password" %></div>

  <div>
  <%= f.password_field :password_confirmation, :class => "form-control", :class => "form-control", :placeholder => "Confirm password" %></div>
<br />
  <div><%= f.submit "Sign up", :class=> "btn btn-lg btn-primary btn-block" %></div>
<%= render "devise/shared/links" %>

<% end %>