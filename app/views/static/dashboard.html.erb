<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

<script>
function loadPage() {
	Fluid.init();
	PMO.listOrgs();
	Fluid.pack();
}
</script>

<body class="fnt-normal" onload="loadPage()">
	
<table id="fluid-container">
	<tr>
		<td>
		<table id="header">
			<tr>
				<td id="header-left">
					<table>
						<tr>
							<td class="header-c-logo"><img src="<%= asset_path 'logo.png' %>"/></td>
							<td class="header-c-icon pointer"><img src="<%= asset_path 'icon-settings.png' %>"/></td>
							<td class="header-c-icon pointer"><img src="<%= asset_path 'icon-search.png' %>"/></td>
							<td class="header-c-icon pointer"><img src="<%= asset_path 'icon-help.png' %>"/></td>
						</tr>
					</table>
				</td>
				<td id="header-right">
					<table align="right">
						<tr>
							<td class="header-c-text pointer">Carlo Abruzzo</td>
							<td class="header-c-separator"><img src="<%= asset_path 'separator.png' %>"/></td>
							<td class="header-c-text pointer">Sign Out</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
		</td>
	</tr>
	<tr id="fluid-container-tr">
		<td>
			<div id="fluid-container-div">
			<table id="fluid-container-table">
				<tr id="fluid-grid">
					<!-- This is where Fluid columns are added -->
				</tr>
			</table>
			</div>
		</td>
	</tr>
    <tr>
        <td id="footer"></td>
    </tr>
</table>
</body>
